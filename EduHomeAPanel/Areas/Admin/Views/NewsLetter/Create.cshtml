@model NewsLetter
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="NewsLetter" asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3 ">
                    <input class="form-check-input" asp-for="@Model.SubTitle">
                    <label class="form-check-label" asp-for="@Model.SubTitle">Sub Title</label>
                </div>
                <div class="mb-3">
                    <input class="form-check-input" asp-for="@Model.Email">
                    <label class="form-check-label" asp-for="@Model.Email">Email</label>
                </div>
                <div class="mb-3">
                    <input class="form-check-input" asp-for="@Model.CreatdeDate">
                    <label class="form-check-label" asp-for="@Model.CreatdeDate">Created Date</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

